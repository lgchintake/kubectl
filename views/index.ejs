<!DOCTYPE html>
<html lang="en">

<head>
    <title>KubeCtl</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
        integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.4.1/socket.io.min.js"
        integrity="sha512-iqRVtNB+t9O+epcgUTIPF+nklypcR23H1yR1NFM9kffn6/iBhZ9bTB6oKLaGMv8JE9UgjcwfBFg/eHC/VMws+g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
        integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <style>
        .nav-item h4 {
            color: #fff;
        }

        #services-list {
            height: 100px;
            overflow-y: auto;
        }

        td i {
            cursor: pointer;
        }

        .indicator {
            position: fixed;
            height: 100vh;
            width: 100%;
            overflow: hidden;
            z-index: 1061;
        }

        .busy {
            background-color: #6c757d !important;
            padding: 10px 50px;
        }

        .indicator .busy {
            position: fixed;
            top: 50%;
            left: 40%;
        }

        #modal-body {
            white-space: pre;
        }
    </style>
</head>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/"><i class="fab fa-docker"></i></a>
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <h4>KubeCtl Dashboard</h4>
        </li>
    </ul>
</nav>

<div class="indicator visually-hidden" style="color: #fff;">
    <div class="busy text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <div>
            please wait...
        </div>
    </div>
</div>
<div class="container-fluid">
    <br>
    <div class="alerts"></div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">NAME</th>
                <th scope="col">READY</th>
                <th scope="col">STATUS</th>
                <th scope="col">RESTARTS</th>
                <th scope="col">AGE</th>
                <th scope="col">ACTION</th>
            </tr>
        </thead>
        <tbody id="services-list">

        </tbody>
    </table>
</div>

<div class="modal fade" id="logsModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false"
    aria-labelledby="logsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="logsModalLabel">Modal title</h5>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <button class="btn btn-dark" onclick="reloadLogs();">Reload Logs</button>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="downloadLog();">Dowload</button>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="restartPodModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Pod</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal"
                    onclick="restartPod();">Delete</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
<a id="downloadAnchorElem" style="display:none"></a>
<script>
    let podname = "";

    var logsModal = new bootstrap.Modal(document.getElementById('logsModal'), {
        keyboard: false
    });

    var modalToRestart = new bootstrap.Modal(document.getElementById('restartPodModal'));
    function downloadLog() {
        var dataStr = "data:text/json;charset=utf-8," + encodeURIComponent($("#modal-body").text());
        var dlAnchorElem = document.getElementById('downloadAnchorElem');
        dlAnchorElem.setAttribute("href", dataStr);
        dlAnchorElem.setAttribute("download", $("#logsModalLabel").text() + ".log");
        dlAnchorElem.click();
    }
    var socket = io();
    function getServices() {
        let services = [];
        $(".indicator").removeClass('visually-hidden');
        socket.emit('list', 'all', (response) => {
            services = response.data;
            for (var count = 1; count < services.length; count++) {
                var serviceData = services[count];
                var row = '<tr><td>' + (count) + '</td>';
                for (var innerCount = 0; innerCount < serviceData.length; innerCount++) {
                    row += '<td>' + serviceData[innerCount] + '</td>';
                }
                row += '<td><i class="fas fa-redo-alt" data-bs-toggle="tooltip" data-bs-placement="top" title="Restart POD" onclick="restartPodModal(\'' + serviceData[0] + '\');"></i> &nbsp;&nbsp;&nbsp; <i class="fas fa-clipboard-list" data-bs-toggle="tooltip" data-bs-placement="top" title="View Logs" onclick="viewLogs(\'' + serviceData[0] + '\');"></i><td>';
                row += '</tr>';
                $("#services-list").append(row);
            }

            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            $(".indicator").addClass('visually-hidden');
        });
    }

    function restartPod() {
        $(".indicator").removeClass('visually-hidden');
        socket.emit('delete', window.podname, (response) => {
            sessionStorage.setItem("message", response.data);
            $(".indicator").addClass('visually-hidden');
            window.location.reload();
        });
    }

    function restartPodModal(podName) {
        window.podname = podName;
        $("#restartPodModal .modal-body").html('Do you really want to delete pod:<b> ' + podName + '</b>?');
        modalToRestart.show();
    }

    function viewLogs(podName) {
        window.podname = podName;
        $("#modal-body").text('');
        $("#logsModalLabel").text(podName);
        logsModal.show();
        $(".indicator").removeClass('visually-hidden');
        socket.emit('logs', podName, (response) => {
            $("#modal-body").text(response.data);
            $(".indicator").addClass('visually-hidden');
        });
    }

    function reloadLogs(){
        viewLogs(window.podname);
    }

    var message = sessionStorage.getItem("message");
    if (message) {
        $(".alerts").append('<div class="alert alert-success alert-dismissible fade show" role="alert">' + message + '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>');
        sessionStorage.removeItem('message');
    }
    getServices();
</script>

</html>